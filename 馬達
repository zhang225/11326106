#include <Servo.h>

Servo myservo;  // 創建一個伺服馬達對象

void setup() {
  myservo.attach(9);  // 將伺服馬達連接到 Arduino 的 9 號引腳
}

void loop() {
  myservo.write(0);   // 將伺服馬達轉到 0 度
  delay(1000);        // 等待 1 秒
  myservo.write(90);  // 將伺服馬達轉到 90 度
  delay(1000);        // 等待 1 秒
  myservo.write(180); // 將伺服馬達轉到 180 度
  delay(1000);        // 等待 1 秒
}
